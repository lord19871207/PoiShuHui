<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/fragment_background"
              android:orientation="vertical">

	<android.support.v7.widget.CardView
		xmlns:android="http://schemas.android.com/apk/res/android"
		xmlns:app="http://schemas.android.com/apk/res-auto"
		android:layout_width="match_parent"
		android:layout_height="0dp"
		android:layout_marginBottom="@dimen/slide_margin"
		android:layout_marginLeft="@dimen/slide_margin"
		android:layout_marginRight="@dimen/slide_margin"
		android:layout_marginTop="@dimen/slide_margin_top"
		android:layout_weight="1"
		app:cardElevation="@dimen/elevation_medium">

		<com.flying.xiaopo.poishuhui.Views.CustomViews.SlideLayout
			android:id="@+id/mSlideLayout"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:layout_margin="@dimen/slide_margin"
			>

			<FrameLayout
				android:id="@+id/fl_container1"
				android:layout_width="0dp"
				android:layout_height="match_parent"
				android:layout_weight="1">

				<ImageView
					android:id="@+id/iv_content1"
					android:layout_width="match_parent"
					android:layout_height="match_parent"
					android:background="@color/ImageView_background"
					android:scaleType="centerCrop"
					/>

				<TextView
					android:id="@+id/tv_title1"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_gravity="bottom"
					android:background="@color/title_background"
					android:gravity="center"
					android:text="@string/hello_world"
					android:textColor="@color/title_textcolor"
					android:textSize="@dimen/text_of_title"/>
			</FrameLayout>

			<FrameLayout
				android:id="@+id/fl_container2"
				xmlns:android="http://schemas.android.com/apk/res/android"
				android:layout_width="0dp"
				android:layout_height="match_parent"
				android:layout_weight="1">

				<ImageView
					android:id="@+id/iv_content2"
					android:layout_width="match_parent"
					android:layout_height="match_parent"
					android:background="@color/ImageView_background"
					android:scaleType="centerCrop"/>

				<TextView
					android:id="@+id/tv_title2"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_gravity="bottom"
					android:background="@color/title_background"
					android:gravity="center"
					android:text="@string/hello_world"
					android:textColor="@color/title_textcolor"
					android:textSize="@dimen/text_of_title"/>
			</FrameLayout>

			<FrameLayout
				android:id="@+id/fl_container3"
				xmlns:android="http://schemas.android.com/apk/res/android"
				android:layout_width="0dp"
				android:layout_height="match_parent"
				android:layout_weight="1">

				<ImageView
					android:id="@+id/iv_content3"
					android:layout_width="match_parent"
					android:layout_height="match_parent"
					android:background="@color/ImageView_background"
					android:scaleType="centerCrop"/>

				<TextView
					android:id="@+id/tv_title3"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_gravity="bottom"
					android:background="@color/title_background"
					android:gravity="center"
					android:text="@string/hello_world"
					android:textColor="@color/title_textcolor"
					android:textSize="@dimen/text_of_title"/>
			</FrameLayout>

			<FrameLayout
				android:id="@+id/fl_container4"
				xmlns:android="http://schemas.android.com/apk/res/android"
				android:layout_width="0dp"
				android:layout_height="match_parent"
				android:layout_weight="1">

				<ImageView
					android:id="@+id/iv_content4"
					android:layout_width="match_parent"
					android:layout_height="match_parent"
					android:background="@color/ImageView_background"
					android:scaleType="centerCrop"/>

				<TextView
					android:id="@+id/tv_title4"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_gravity="bottom"
					android:background="@color/title_background"
					android:gravity="center"
					android:text="@string/hello_world"
					android:textColor="@color/title_textcolor"
					android:textSize="@dimen/text_of_title"/>
			</FrameLayout>

			<FrameLayout
				android:id="@+id/fl_container5"
				xmlns:android="http://schemas.android.com/apk/res/android"
				android:layout_width="0dp"
				android:layout_height="match_parent"
				android:layout_weight="1">

				<ImageView
					android:id="@+id/iv_content5"
					android:layout_width="match_parent"
					android:layout_height="match_parent"
					android:background="@color/ImageView_background"
					android:scaleType="centerCrop"/>

				<TextView
					android:id="@+id/tv_title5"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_gravity="bottom"
					android:background="@color/title_background"
					android:gravity="center"
					android:text="@string/hello_world"
					android:textColor="@color/title_textcolor"
					android:textSize="@dimen/text_of_title"/>
			</FrameLayout>
		</com.flying.xiaopo.poishuhui.Views.CustomViews.SlideLayout>
	</android.support.v7.widget.CardView>
	<!--TODO-->
	<FrameLayout
		android:layout_width="match_parent"
		android:layout_height="0dp"
		android:layout_weight="2"
		android:background="#fff">

		<android.support.v7.widget.RecyclerView
			android:id="@+id/rv_bottom"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:scrollbars="none"
			></android.support.v7.widget.RecyclerView>
	</FrameLayout>


</LinearLayout>